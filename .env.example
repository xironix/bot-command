# Telegram API credentials (required)
# Get these from https://my.telegram.org/apps
TELEGRAM_API_ID=12345678
TELEGRAM_API_HASH=abcdef0123456789abcdef0123456789
TELEGRAM_BOT_TOKENS=123456789:ABCdefGHIjklMNOpqrsTUVwxyz

# MongoDB configuration
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_URI=mongodb://${MONGODB_HOST}:${MONGODB_PORT}/

# Elasticsearch configuration
ELASRICSEARCH_USER=elastic
ELASTICSEARCH_PASSWORD=changeme123
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_URI=http://${ELASTICSEARCH_USER}:${ELASTICSEARCH_PASSWORD}@${ELASTICSEARCH_HOST}:${ELASTICSEARCH_PORT}

# Kibana configuration
KIBANA_HOST=localhost
KIBANA_PORT=5601
KIBANA_URI=http://${KIBANA_HOST}:${KIBANA_PORT}

# Application settings
DEBUG=false
LOG_LEVEL=INFO
MEDIA_RETENTION_DAYS=30
MAX_DISK_USAGE_GB=100

# Note: These are example values only. Replace with your actual values in .env
# - TELEGRAM_API_ID and TELEGRAM_API_HASH: Get from https://my.telegram.org/apps
